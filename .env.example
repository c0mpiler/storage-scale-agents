# Scale Agents Environment Variables
# ===================================
#
# Environment variables override config.yaml settings.
# Copy to .env and modify as needed.
#
# Note: config.yaml is the preferred way to configure Scale Agents.
# Use environment variables for secrets and deployment-specific overrides.

# Configuration File
# ------------------
# SCALE_AGENTS_CONFIG=/path/to/config.yaml

# MCP Server Connection
# ---------------------
SCALE_AGENTS_MCP_SERVER_URL=http://163.66.86.14:8000/mcp
SCALE_AGENTS_MCP_TIMEOUT=60.0
SCALE_AGENTS_MCP_MAX_RETRIES=3
SCALE_AGENTS_MCP_RETRY_DELAY=1.0
SCALE_AGENTS_MCP_DOMAIN=StorageScaleDomain

# Agent Server
# ------------
SCALE_AGENTS_HOST=0.0.0.0
SCALE_AGENTS_PORT=8080

# Security
# --------
SCALE_AGENTS_REQUIRE_CONFIRMATION=true
SCALE_AGENTS_CONFIRMATION_TIMEOUT=300

# Logging
# -------
SCALE_AGENTS_LOG_LEVEL=INFO
SCALE_AGENTS_LOG_FORMAT=json

# LLM Reasoning
# -------------
# Set to true to enable LLM-powered reasoning
# Requires: uv pip install -e ".[llm]"
SCALE_AGENTS_LLM_ENABLED=true
SCALE_AGENTS_LLM_PROVIDER=ollama
SCALE_AGENTS_LLM_MODEL=qwen3:30b-a3b
SCALE_AGENTS_LLM_BASE_URL=http://localhost:11434
SCALE_AGENTS_LLM_TEMPERATURE=0.1
SCALE_AGENTS_LLM_MAX_TOKENS=4096

# For OpenAI:
# SCALE_AGENTS_LLM_PROVIDER=openai
# SCALE_AGENTS_LLM_MODEL=gpt-4o
# SCALE_AGENTS_LLM_API_KEY=sk-...

