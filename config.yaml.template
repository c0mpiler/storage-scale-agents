# Scale Agents Configuration Template
# ====================================
#
# Copy this file to config.yaml and customize for your environment.
# Environment variables override these settings.
# Format: SCALE_AGENTS_<SECTION>_<KEY>

# MCP Server Connection
# ---------------------
mcp:
  # URL of the scale-mcp-server endpoint
  server_url: "http://127.0.0.1:8000/mcp"

  # Request timeout in seconds
  timeout: 60.0

  # Maximum retry attempts for failed requests
  max_retries: 3

  # Base delay between retries in seconds
  retry_delay: 1.0

  # Storage Scale domain for authorization
  domain: "StorageScaleDomain"

# LLM Reasoning (Optional)
# ------------------------
# Requires: uv pip install -e ".[llm]"
llm:
  # Enable LLM-powered semantic understanding
  enabled: false

  # Provider: ollama, openai, anthropic
  provider: null

  # Model name
  model: null

  # Base URL (required for ollama)
  base_url: null

  # API key (required for openai/anthropic)
  api_key: null

  # Sampling temperature (0.0 = deterministic, 1.0 = creative)
  temperature: 0.1

  # Maximum tokens in response
  max_tokens: 4096

# Agent Server
# ------------
server:
  # Host to bind
  host: "0.0.0.0"

  # Port to bind (AgentStack default: 10000)
  port: 10000

# Security
# --------
security:
  # Require confirmation for destructive operations
  require_confirmation: true

  # Confirmation timeout in seconds
  confirmation_timeout: 300

  # Allowed Storage Scale domains (empty = all)
  allowed_domains: []

# Logging
# -------
logging:
  # Log level: DEBUG, INFO, WARNING, ERROR
  level: "INFO"

  # Log format: json, console
  format: "json"

  # Optional log file path
  file: null

# Agent Configuration
# -------------------
agents:
  orchestrator:
    enabled: true
    max_results: 100

  health:
    enabled: true
    max_results: 100

  storage:
    enabled: true
    max_results: 100

  quota:
    enabled: true
    max_results: 100

  performance:
    enabled: true
    max_results: 100

  admin:
    enabled: true
    max_results: 50
